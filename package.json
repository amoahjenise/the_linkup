{
  "name": "The Linkup",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "init-db": "PGPASSWORD=$POSTGRES_PASSWORD psql -h $POSTGRES_HOST -U $POSTGRES_USER -d $POSTGRES_DB -f server/initdb-scripts/01_create_tables.sql",
    "heroku-postbuild": "npm run build",
    "build:server": "cd server/auth-service && npm install && cd ../user-management-service && npm install && cd ../link-up-management-service && npm install && cd ../link-up-request-service && npm install && cd ../notification-service && npm install && cd ../messaging-service && npm install && cd ../image-service && npm install && cd ../location-service && npm install",
    "build:client": "cd client && npm install && npm run build",
    "build": "npm run build:client && npm run build:server",
    "start": "node index.js",
    "start:client": "cd client && npm start",
    "start:dev": "concurrently \"npm run start\" \"npm run start:client\""
  },
  "dependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@clerk/clerk-react": "^4.27.2",
    "@clerk/clerk-sdk-node": "^4.13.9",
    "@mui/icons-material": "^5.15.18",
    "@mui/material": "^5.15.18",
    "@reduxjs/toolkit": "^2.2.5",
    "@sendbird/uikit-react": "^3.14.6",
    "ajv": "^8.17.1",
    "body-parser": "^1.20.2",
    "color": "^4.2.3",
    "compromise": "^14.12.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "framer-motion": "^10.18.0",
    "helmet": "^7.1.0",
    "if-env": "^1.0.4",
    "path": "^0.12.7",
    "react-router-dom": "^6.14.2",
    "sendbird": "^3.1.33",
    "socket.io": "^4.7.5",
    "svix": "^1.17.0"
  }
}
